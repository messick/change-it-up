!!! 5
%html
  %head
    %title
      Change It Up!
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      %h1 Change It Up!
      #flash-notice.clearfix
        = bootstrap_flash
      = yield

      %h4 Required Parameters:
      .width
        width:
        %span.example width=100
      .height
        height:
        %span.example height=100

      %h3 Optional Parameter:
      .conv_type
        conv_type:
        %span.example conv_type=resize
        Or
        %span.example conv_type=crop
